---
import { Icon } from 'astro-icon/components';
import MainLayout from './MainLayout.astro';
---

<MainLayout
	title='ComunidadDev | Blog'
	description='hola'>
	<section class='w-full lg:w-[70%] mx-auto h-full flex flex-col gap-4'>
		<slot />
	</section>

	<a
		href='#typescript'
		class='fixed bottom-4 right-5 text-white text-3xl bg-[#E7562E] hover:bg-[#ED9B40] hover:text-[#1F2937] transition-colors duration-300 rounded-full p-2'>
		<Icon name='arrow' />
	</a>
</MainLayout>

<style is:global>
	html {
		scroll-behavior: smooth;
	}

	h1,
	h2,
	h3 {
		color: #e7e9ea;
		font-weight: bold;
	}

	h1 {
		font-size: 3rem;
		text-transform: uppercase;
	}

	h2 {
		font-size: 2rem;
	}

	h3 {
		font-size: 1.5rem;
	}

	li,
	p {
		font-size: 1.1rem;
		color: #cacaca;
	}

	strong {
		color: #ed9b40;
	}

	p > a {
		color: #2e9de7;
		text-decoration: underline;
	}
</style>
